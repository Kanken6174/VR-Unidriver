<UserControl x:Class="CCT.GenericComponentUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CCT"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>

            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0" Text="A" Width="50" Height="50" TextAlignment="Center" VerticalContentAlignment="Center" />

        <ListBox Grid.Column="1" Width="400" Height="40" SelectionChanged="ListBox_SelectionChanged" Name="LBGen"/>

        <Button Height="50" Width="70" Click="ListeBox_AddItem">ClickHere</Button>
    </Grid>
</UserControl>
