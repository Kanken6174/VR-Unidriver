<UserControl x:Class="CCT_DoMoCap.Footer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CCT_DoMoCap"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Content="Request Trame" Width="120" Height="40" Name="TrameButton"/>
        <Button Grid.Column="1" Content="Save Changes" Width="120" Height=" 40"/>
        <Button Grid.Column="2" Content="Undo" Width="120" Height=" 40"/>
    </Grid>
</UserControl>
