<UserControl x:Class="CCT_DoMoCap.GenericComponentUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CCT_DoMoCap"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>

            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <ToggleButton Grid.Column="0" Content="A" Width="50" Height="50"  VerticalContentAlignment="Center" Name="LetterBox"  Keyboard.KeyDown="OnKeyDownHandler"  />

        <ListBox Grid.Column="1" Width="400" Height="75"  Name="LBGen"/>

        
    </Grid>
</UserControl>
