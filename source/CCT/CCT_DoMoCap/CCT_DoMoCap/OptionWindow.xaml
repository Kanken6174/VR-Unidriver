<Window x:Class="CCT_DoMoCap.OptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CCT_DoMoCap"
        mc:Ignorable="d"
        Title="OptionWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <CheckBox Content="Ouvrir au démarrage de l'appareil" Margin="15" MaxHeight="25" MaxWidth="250" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Button  Grid.Column="1" Grid.Row="1" Height="50" Width="90" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="15" Content="Sauvegarder" />
    </Grid>
</Window>
