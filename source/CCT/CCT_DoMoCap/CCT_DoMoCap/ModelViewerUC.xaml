<UserControl x:Class="CCT_DoMoCap.ModelViewerUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CCT_DoMoCap"
             mc:Ignorable="d" 
             d:DesignHeight="125" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock Text="In-Game Model" TextAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="DemiBold" Margin="0,0,15,0"/>
        <ListView Grid.Column="1"  MinWidth="200" HorizontalAlignment="Left" FontSize="16" Margin="15,0,0,0" />

    </Grid>
</UserControl>
